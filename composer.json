{
    "name": "twork/app",
    "description": "A WordPress Theme Framework.",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Trevor Thompson",
            "email": "trevor@trevomail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Twork\\": "lib/",
            "Twork\\Template\\": "lib/template/",
            "Twork\\Query\\": "lib/query/",
            "Twork\\Utils\\": "lib/utils/",
            "Twork\\Cli\\": "lib/cli/",
            "Twork\\Cli\\Make\\": "lib/cli/make/",
            "Twork\\App\\Controllers\\": "app/controllers/",
            "Twork\\App\\Queries\\": "app/queries"
        }
    },
    "require": {
        "php": "^7.2",
        "jenssegers/blade": "^1.2"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "sniff": "phpcs -p -s --colors --standard=phpcs.xml"
    }
}
